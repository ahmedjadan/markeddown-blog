  <button
    type="submit"
    class="block bg-indigo-500 w-full mt-3 p-3 text-center rounded hover:bg-indigo-600 text-gray-100"
  >
    Create
  </button>

  <a
    href="/"
    class="block text-center bg-gray-500 w-full mt-3 p-3 rounded hover:bg-gray-600 text-gray-100"
    >Cancel</a
  >
</div>
