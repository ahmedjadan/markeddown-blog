<!DOCTYPE html>
<html lang="en">
<%- include('_head.ejs')  %> 

  <body class="bg-gray-100">
    <%-include('../partials/navbar.ejs') %>
    
    <div class="container mx-auto">
      <div class="mt-8 grid md:grid-cols-2 gap-5 p-5 lg:px-32">
        <% Articles.forEach((article) => { %>
        <div class="card bg-white p-3 rounded-md shadow-sm ">
          <a href="articles/<%= article.slug%> ">
            <h1 class="text-3xl mb-2 text-gray-600 font-bold capitalize ">
              <%= article.title %>
            </h1>
          </a>
          <p class="text-gray-700 leading-relaxed"><%= article.description %></p>
         <div class="my-2 grid grid-cols-2">
          <p class="text-gray-400">
           Published :  <%= article.createdAt.toLocaleDateString() %> 
          </p>
          <p class="text-gray-400">
           Last Update:  <%= article.updatedAt.toLocaleString() %> 
          </p>
         </div>
        </div>

        <% }) %>
      </div>
    </div>
  </body>
</html>
